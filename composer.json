{
    "name": "opis-colibri/core",
    "license": "Apache-2.0",
    "description": "The core package of the Opis Colibri framework",
    "keywords": ["opis", "colibri", "framework", "core"],
    "homepage": "http://opis.io",
    "authors": [
        {
            "name": "Marius Sarca",
            "email": "marius.sarca@gmail.com"
        },
        {
            "name": "Sorin Sarca",
            "email": "sarca_sorin@hotmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Opis\\Colibri\\": "src/"
        },
        "files": ["src/functions.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Opis\\Colibri\\Test\\": "tests/"
        }
    },
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "ext-intl": "*",
        "ext-fileinfo": "*",
        "composer/composer": "^2.0",
        "opis/closure": "4.x-dev",
        "opis/database": "2020.x-dev",
        "opis/uri": "^1.0",
        "opis/json-schema": "^2.0",
        "psr/log": "^1.0",
        "psr/container": "^1.0",
        "symfony/console": "^3.1.3",
        "vlucas/phpdotenv": "^5.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "psr/simple-cache": "^1.0",
        "psr/http-message": "^1.0",
        "aws/aws-sdk-php": "^3.69"
    },
    "config": {
        "preferred-install": "dist"
    },
    "prefer-stable": true,
    "minimum-stability": "dev",
    "extra": {
        "branch-alias": {
            "dev-master": "2020.x-dev"
        }
    }
}
