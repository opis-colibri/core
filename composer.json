{
    "name": "opis-colibri/core",
    "license": "Apache-2.0",
    "description": "Opis Colibri framework core",
    "keywords": ["opis", "colibri", "framework", "core"],
    "homepage": "http://opis.io",
    "authors": [
        {
            "name": "Marius Sarca",
            "email": "marius.sarca@gmail.com"
        },
        {
            "name": "Sorin Sarca",
            "email": "sarca_sorin@hotmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Opis\\Colibri\\": "src/"
        },
        "files": ["src/functions.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Opis\\Colibri\\Test\\": "tests/"
        }
    },
    "require": {
        "php": "^7.1",
        "ext-json": "*",
        "composer/composer": "^1.9",
        "opis-colibri/plugin": "1.0.x-dev",
        "opis/data-store": "^1.0",
        "opis/cache": "^4.0",
        "opis/intl": "1.0.x-dev",
        "opis/session": "4.0.x-dev",
        "opis/orm": "^1.0",
        "opis/container": "^3.0",
        "opis/http-routing": "^5.0",
        "opis/view": "^5.0",
        "opis/events": "^5.0",
        "opis/validation": "1.0.*@dev",
        "symfony/console": "^3.1.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0"
    },
    "config": {
        "preferred-install": "dist"
    },
    "prefer-stable": true,
    "minimum-stability": "dev",
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
