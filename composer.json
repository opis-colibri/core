{
    "name": "opis/colibri",
    "type": "project",
    "description": "A different kind of framework",
    "keywords": ["framework", "php"],
    "homepage": "http://opis.io",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Marius Sarca",
            "email": "marius.sarca@gmail.com"
        }
    ],
    "require": {
        "opis-colibri/core": "~1.0",
        "opis-colibri/commands": "~1.0",
        "opis-colibri/module-installer": "~1.0",
        "opis-colibri/standard": "1.0.x-dev"
    },
    "config": {
        "preferred-install": "dist"
    },
    "prefer-stable": true,
    "minimum-stability": "dev",
    "scripts": {
        "get-module": "Opis\\Colibri\\Commands\\Scripts\\Composer::getModule",
        "get-package": "Opis\\Colibri\\Commands\\Scripts\\Composer::getPackage"
    },
    "extra": {
        "installer-paths": {
            "system/modules/{$name}/":["opis-colibri/system",
                                       "opis-colibri/install",
                                       "opis-colibri/manager"]
        },
        "installer-modules": ["install", "system"], 
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
